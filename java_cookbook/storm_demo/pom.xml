            <groupId>com.n3twork.druid</groupId>
            <artifactId>druid-processing</artifactId>
            <version>0.6.105-hadoop2.4.0</version>
            <exclusions>
                <exclusion>
                    <groupId>com.n3twork.druid</groupId>
                    <artifactId>druid-common</artifactId>
